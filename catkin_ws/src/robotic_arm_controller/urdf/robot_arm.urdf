<?xml version="1.0"?>
<robot name="robotic_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="PI" value="3.14159265359"/>
  
  <!-- Link dimensions (meters) -->
  <xacro:property name="base_height" value="0.1"/>
  <xacro:property name="link1_length" value="0.3"/>
  <xacro:property name="link2_length" value="0.25"/>
  <xacro:property name="link3_length" value="0.15"/>
  <xacro:property name="link_radius" value="0.03"/>
  
  <!-- Materials -->
  <material name="blue">
    <color rgba="0.2 0.2 0.8 1"/>
  </material>
  
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  
  <material name="orange">
    <color rgba="1.0 0.5 0.0 1"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="${base_height}"/>
      </geometry>
      <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="${base_height}"/>
      </geometry>
      <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Link 1 (Shoulder Pan) -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link1_length}"/>
      </geometry>
      <origin xyz="0 0 ${link1_length/2}" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link1_length}"/>
      </geometry>
      <origin xyz="0 0 ${link1_length/2}" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 1 (Base Rotation) -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 ${base_height}" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-PI}" upper="${PI}" effort="10.0" velocity="1.0"/>
  </joint>

  <!-- Link 2 (Shoulder) -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link2_length}"/>
      </geometry>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 ${PI/2} 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link2_length}"/>
      </geometry>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 ${PI/2} 0"/>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 2 (Shoulder Pitch) -->
  <joint name="joint_2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 ${link1_length}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-PI/2}" upper="${PI/2}" effort="10.0" velocity="1.0"/>
  </joint>

  <!-- Link 3 (Elbow) -->
  <link name="link3">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link2_length}"/>
      </geometry>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 ${PI/2} 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link2_length}"/>
      </geometry>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 ${PI/2} 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 3 (Elbow) -->
  <joint name="joint_3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="${link2_length} 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-PI/2}" upper="${PI/2}" effort="10.0" velocity="1.0"/>
  </joint>

  <!-- Link 4 (Wrist Roll) -->
  <link name="link4">
    <visual>
      <geometry>
        <cylinder radius="${link_radius*0.8}" length="${link3_length}"/>
      </geometry>
      <origin xyz="0 0 ${link3_length/2}" rpy="0 0 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius*0.8}" length="${link3_length}"/>
      </geometry>
      <origin xyz="0 0 ${link3_length/2}" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Joint 4 (Wrist Roll) -->
  <joint name="joint_4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="${link2_length} 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="${-PI}" upper="${PI}" effort="5.0" velocity="1.5"/>
  </joint>

  <!-- Link 5 (Wrist Pitch) -->
  <link name="link5">
    <visual>
      <geometry>
        <cylinder radius="${link_radius*0.6}" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 ${PI/2} 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius*0.6}" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 ${PI/2} 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.0003"/>
    </inertial>
  </link>

  <!-- Joint 5 (Wrist Pitch) -->
  <joint name="joint_5" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0 0 ${link3_length}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-PI/2}" upper="${PI/2}" effort="5.0" velocity="1.5"/>
  </joint>

  <!-- Link 6 (End Effector/Gripper) -->
  <link name="link6">
    <visual>
      <geometry>
        <cylinder radius="${link_radius*0.5}" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius*0.5}" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Joint 6 (Wrist Yaw/Gripper Rotation) -->
  <joint name="joint_6" type="revolute">
    <parent link="link5"/>
    <child link="link6"/>
    <origin xyz="0.08 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="${-PI}" upper="${PI}" effort="3.0" velocity="2.0"/>
  </joint>

  <!-- Gazebo-specific properties -->
  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="link1">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="link2">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="link3">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="link4">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="link5">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="link6">
    <material>Gazebo/Grey</material>
  </gazebo>

</robot>
